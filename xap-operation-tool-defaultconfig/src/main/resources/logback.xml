<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="gca.in.xap.tools.operationtool.logback.ThresholdLoggerFilter">
			<logger>console</logger>
			<level>INFO</level>
		</filter>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level [%-16thread] %logger - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="ASYNC_STDOUT" class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="STDOUT"/>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/xap-application-deployTask.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>logs/xap-application-deployTask.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>8</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>%date %-5level [%-24thread] %logger - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="FILE"/>
	</appender>

	<logger name="org.springframework" level="WARN"/>

	<logger name="uk.org.lidalia.sysoutslf4j.context.SysOutOverSLF4J" level="WARN"/>

	<logger name="gca.in.xap.tools.operationtool" level="INFO"/>

	<logger name="gca.in.xap.tools.operationtool.service.ApplicationConfigBuilder" level="WARN"/>

	<logger name="org.openspaces.pu.container.support.ResourceApplicationContext" level="WARN"/>

	<root level="INFO">
		<appender-ref ref="ASYNC_STDOUT"/>
		<appender-ref ref="ASYNC_FILE"/>
	</root>

</configuration>
